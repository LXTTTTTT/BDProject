<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_2">

    <include
        layout="@layout/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/auto_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/auto_checked"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/checked_icon"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/text_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/checked_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/checked_icon"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="450bps"
                android:textColor="@color/gray_10"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/checked_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/checked_icon"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="700bps"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textColor="@color/gray_10"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/checked_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/checked_icon"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200bps"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textColor="@color/gray_10"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/checked_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/checked_icon"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2400bps"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textColor="@color/gray_10"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/send_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@mipmap/button_bg_2"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/send_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/yes_icon" />


    </RelativeLayout>


</RelativeLayout>