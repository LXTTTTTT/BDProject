<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="70dp"
    android:paddingTop="5dp"
    android:paddingBottom="0dp">

    <RelativeLayout
        android:id="@+id/message_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_fill_white_1"
                android:maxWidth="200dp"
                android:padding="5dp"
                android:text="聊天内容聊天内容聊天内容聊天内容"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <!--    语音消息-->
            <LinearLayout
                android:id="@+id/voice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_fill_white_1"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/voice_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="3"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/voice_img"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/anim_voice_left_play" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/location"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/message_group"
        android:layout_alignParentLeft="@+id/message_group"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/location_icon"
        android:visibility="gone" />

</RelativeLayout>

