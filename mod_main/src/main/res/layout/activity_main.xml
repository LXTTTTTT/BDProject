<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/connect_bluetooth_group"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/button_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connect_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击连接北斗"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/icon_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!--            消息页面-->
                <RelativeLayout
                    android:id="@+id/message_page"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/message_page" />

                    <!--                未读消息数量-->
                    <TextView
                        android:id="@+id/unread_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/corner_fill_red_3"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:padding="2dp"
                        android:text="99"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/state_page"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/status_page"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

                <ImageView
                    android:id="@+id/map_page"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/map_page"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/healthy_page"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/healthy_page"/>

                <ImageView
                    android:id="@+id/sos_page"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/sos_page"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

                <ImageView
                    android:id="@+id/setting_page"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/setting_page"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/now_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_group"
        android:layout_marginTop="40dp"
        android:text="10-24 23:59"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"/>


</RelativeLayout>