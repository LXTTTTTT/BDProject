<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        发送文字层-->
        <LinearLayout
            android:id="@+id/send_text_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#212121"
                android:gravity="center">

                <ImageView
                    android:id="@+id/voice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/voice_icon"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:background="#343434">

                    <EditText
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@null"
                        android:hint="请输入聊天内容"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_2"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/voiceInputBtn"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:text="按住说话"
                        android:textColor="@color/gray_3"
                        android:visibility="gone" />

                </RelativeLayout>




                <ImageView
                    android:id="@+id/swith_picture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/picture_icon"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/swith_msg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="70dp"
                    android:src="@mipmap/shortcut_icon" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/selector_button_bg_1"
                    android:text="发送"/>

                <ImageView
                    android:id="@+id/send_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/send_button"
                    android:visibility="invisible" />



            </RelativeLayout>



        </LinearLayout>

        <!--        发送语音层-->
        <LinearLayout
            android:id="@+id/send_voice_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/voice_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_button_bg_1"
                    android:text="按住说话" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/keyboard"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/keyboard_icon"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>