<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    文本消息-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_group"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/transparent"
        >


        <TextView
            android:id="@+id/content"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_fill_green_3"
            android:maxWidth="200dp"
            android:padding="5dp"
            android:text="聊天内容聊天内容聊天内容聊天内容"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="70dp" />

        <ImageView
            android:id="@+id/state"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fail_icon"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/content"
            app:layout_constraintEnd_toStartOf="@+id/content"
            app:layout_constraintTop_toTopOf="@+id/content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/location_icon"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/content"
            app:layout_constraintTop_toBottomOf="@+id/content" />


    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    语音消息-->
    <RelativeLayout
        android:id="@+id/voice_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/vioce_text"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/corner_fill_green_3"
            android:maxWidth="400dp"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/voice_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:text="3"
            android:textColor="@color/black"/>


        <ImageView
            android:id="@+id/audio_play"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="90dp"
            android:background="@mipmap/voice_left_play" />

        <ImageView
            android:id="@+id/voice_state"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fail_icon"
            android:layout_toLeftOf="@+id/vioce_text"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>

